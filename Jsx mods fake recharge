    <script>
        let curOp = "", curPlan = null, isBypass = false;

        const allPlans = {
            'Airtel': [{p:3359, v:'365d', d:'2.5GB/d'},{p:839, v:'84d', d:'2GB/d'},{p:479, v:'56d', d:'1.5GB/d'},{p:299, v:'28d', d:'1.5GB/d'},{p:155, v:'24d', d:'1GB'},{p:19, v:'1d', d:'1GB'}],
            'Jio': [{p:2999, v:'365d', d:'2.5GB/d'},{p:749, v:'90d', d:'2GB/d'},{p:349, v:'28d', d:'2GB/d'},{p:239, v:'28d', d:'1.5GB/d'},{p:155, v:'28d', d:'2GB'},{p:15, v:'1d', d:'1GB'}],
            'Vi': [{p:3099, v:'365d', d:'2GB/d'},{p:719, v:'84d', d:'1.5GB/d'},{p:479, v:'56d', d:'1.5GB/d'},{p:299, v:'28d', d:'1.5GB/d'},{p:179, v:'28d', d:'2GB'},{p:19, v:'1d', d:'1GB'}],
            'BSNL': [{p:2399, v:'395d', d:'2GB/d'},{p:599, v:'84d', d:'5GB/d'},{p:197, v:'70d', d:'2GB/d'},{p:153, v:'26d', d:'1GB/d'},{p:107, v:'35d', d:'3GB'},{p:18, v:'2d', d:'1GB'}]
        };

        function toggleJsx(s) { document.getElementById('jsxPanel').style.display = s ? 'block' : 'none'; }
        
        function toggleBypass() {
            isBypass = !isBypass;
            document.getElementById('bypassKnob').style.left = isBypass ? '26px' : '4px';
            document.getElementById('bypassKnob').style.background = isBypass ? '#3b82f6' : '#52525b';
        }

        function show(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function setOp(op, el) {
            curOp = op;
            document.querySelectorAll('.op-card').forEach(c => c.classList.remove('selected'));
            el.classList.add('selected');
        }

        function navPlans() {
            const num = document.getElementById('phone').value;
            if(!curOp || num.length < 10) return;
            const list = document.getElementById('planList');
            list.innerHTML = "";
            allPlans[curOp].forEach(p => {
                const div = document.createElement('div');
                div.className = "plan-card flex justify-between items-center bg-white";
                div.onclick = () => { curPlan = p; document.getElementById('payAmt').innerText = "₹"+p.p; show('payScreen'); };
                div.innerHTML = `
                    <div>
                        <p class="text-2xl font-black mb-1">₹${p.p}</p>
                        <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">${p.d} • Validity: ${p.v}</p>
                    </div>
                    <i class="fas fa-chevron-right text-gray-200"></i>
                `;
                list.appendChild(div);
            });
            show('plans');
        }

        function selPay(el) {
            document.querySelectorAll('.pay-item').forEach(i => {
                i.classList.remove('selected');
                i.querySelector('.w-5').innerHTML = "";
                i.querySelector('.w-5').className = "w-5 h-5 border-2 border-gray-200 rounded-full";
            });
            el.classList.add('selected');
            el.querySelector('.w-5').className = "w-5 h-5 border-2 border-indigo-600 rounded-full flex items-center justify-center";
            el.querySelector('.w-5').innerHTML = '<div class="w-2.5 h-2.5 bg-indigo-600 rounded-full"></div>';
        }

        function processPay() {
            if(!isBypass) {
                alert("Please enable 'Payment Bypass' in the JSX Mod Menu (Click the black JSX button)");
                return;
            }
            document.getElementById('loader').style.display = 'flex';
            setTimeout(() => {
                document.getElementById('loader').style.display = 'none';
                const num = document.getElementById('phone').value;
                document.getElementById('succAmt').innerText = "₹" + curPlan.p;
                document.getElementById('succNum').innerText = "+91 " + num;
                document.getElementById('succOp').innerText = curOp;
                
                const names = {'Airtel':'AIRTEL','Jio':'JIOPAY','Vi':'VIFONE','BSNL':'BSNL-REC'};
                const sender = names[curOp];
                document.getElementById('notifSender').innerText = sender;
                document.getElementById('smsName').innerText = sender;
                document.getElementById('smsInit').innerText = sender[0];
                document.getElementById('smsMsg').innerText = `Recharge successful! ₹${curPlan.p} has been credited to your ${curOp} mobile ${num}. Your data benefit is ${curPlan.d} for ${curPlan.v}. Ref No: JSX${Math.floor(Math.random()*999999)}`;
                
                show('success');
                setTimeout(() => {
                    playPupSound();
                    document.getElementById('notif').classList.add('active');
                }, 1000);
            }, 3000);
        }

        function playPupSound() {
            const ctx = new (window.AudioContext || window.webkitAudioContext)();
            const tone = (f, d, t) => {
                const o = ctx.createOscillator(); const g = ctx.createGain();
                o.connect(g); g.connect(ctx.destination);
                o.frequency.setValueAtTime(f, ctx.currentTime + t);
                g.gain.setValueAtTime(0.2, ctx.currentTime + t);
                g.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + t + d);
                o.start(ctx.currentTime + t); o.stop(ctx.currentTime + t + d);
            };
            tone(1500, 0.08, 0); // High pitch "Pup"
            if(navigator.vibrate) navigator.vibrate(60);
        }

        function openSms() {
            document.getElementById('notif').classList.remove('active');
            show('smsScreen');
        }
    </script>
</body>
